<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.order.model.Article">
		<id name="id" type="int" column="ArticleId">
			<meta attribute="scope-set">protected</meta>
			<generator class="native" />
		</id>

		<property name="title" type="string" />
		<property name="content" type="text" />
		<property name="publishDate" type="timestamp" not-null="true" />

        <join table="UserArticle">
            <key column="ArticleId" unique="true" />
            <many-to-one name="owner" column="UserId" />
        </join>
	</class>
</hibernate-mapping>